#include <iostream>
using namespace std;

int main()
{
    int N, horas, minutos, segundos;
    cin >> N;

    horas = N/3600;

    if (horas > 60)
    {
        horas = horas/60;
    }

    minutos = horas/60;

    if (minutos > 60)
    {
        minutos = minutos/60;
    }

    segundos = minutos/60;

    if (segundos > 60)
    {
        segundos = segundos/60;
    }


    cout << horas << ":" << minutos << ":" << segundos << endl;
    return 0;
}
